{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "plugins": [
        "import"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "settings": {
        "import/extensions": [
            ".js",
            ".mjs"
          ],
          "import/resolver": {
            "node": {
              "extensions": [
                ".js"
              ]
            }
          }
    },
    "rules": {
        "import/no-unresolved": [2, {"commonjs": true, "amd": true}],
        "no-plusplus": [2, { "allowForLoopAfterthoughts": true }]
    }
}
